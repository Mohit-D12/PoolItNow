<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CreateCabpool">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginVertical="35dp"
        android:text="CREATE NEW CABPOOL"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Pickup Point"
        android:id="@+id/PickupPoint_Create"
        android:layout_marginHorizontal="35dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Drop location"
        android:id="@+id/DropLocation_Create"
        android:layout_marginHorizontal="35dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Date"
            android:id="@+id/DateButton_Create"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Time"
            android:id="@+id/TimeButton_Create"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        android:id="@+id/AddButton_Create"
        android:layout_marginRight="35dp"
        android:layout_gravity="right"
        />

</LinearLayout>